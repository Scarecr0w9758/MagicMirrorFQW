{
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "vite/client", "element-plus/global"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "api/**/*.js",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.js",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
